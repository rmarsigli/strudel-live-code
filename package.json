{
  "name": "strudel-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Strudel Studio monorepo - Live coding music environment",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmarsigli/strudel-studio.git"
  },
  "scripts": {
    "dev": "pnpm --filter studio dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "server": "pnpm --filter studio server",
    "server:dev": "pnpm --filter studio server:dev"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "license": "MIT"
}
